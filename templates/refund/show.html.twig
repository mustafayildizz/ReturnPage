{% extends 'adminbase.html.twig' %}

{% block title %}Refund{% endblock %}

{% block body %}
    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Detail Page</h3>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12  ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Details</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </div>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ refund[0].id }}</td>
                                </tr>
                                <tr>
                                    <th>Order_code</th>
                                    <td>{{ refund[0].order_code }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ refund[0].name }}</td>
                                </tr>
                                <tr>
                                    <th>Surname</th>
                                    <td>{{ refund[0].surname }}</td>
                                </tr>
                                <tr>
                                    <th>Country</th>
                                    <td>{{ refund[0].country }}</td>
                                </tr>
                                <tr>
                                    <th>Street_address</th>
                                    <td>{{ refund[0].street_address }}</td>
                                </tr>
                                <tr>
                                    <th>Postcode</th>
                                    <td>{{ refund[0].postcode }}</td>
                                </tr>
                                <tr>
                                    <th>City</th>
                                    <td>{{ refund[0].city }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ refund[0].email }}</td>
                                </tr>
                                <tr>
                                    <th>Phone</th>
                                    <td>{{ refund[0].phone }}</td>
                                </tr>
                                <tr>
                                    <th>Credit_card_number</th>
                                    <td>{{ refund[0].credit_card_number }}</td>
                                </tr>
                                <tr>
                                    <th>Order Details</th>
                                    <td>{{ refund[0].order_detail }}</td>
                                </tr>
                                <tr>
                                    <th>Created at</th>
                                    <td>{{ refund[0].created_at|date("d-m-Y H:i:s") }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ refund[0].status }}</td>
                                </tr>
{#                                <tr>#}
{#                                    <th>Updated at</th>#}
{#                                    <td>{{ refund.updatedAt }}</td>#}
{#                                </tr>#}
                                </tbody>
                            </table>

                            <br>

                            <a href="{{ path('refund_edit', {'id': refund[0].id}) }}" class="btn btn-outline-secondary col-2">Edit</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->

{% endblock %}
