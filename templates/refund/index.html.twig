{% extends 'adminbase.html.twig' %}

{% block title %}Refund index{% endblock %}

{% block body %}
    <!-- page content -->
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h1>Refund index</h1>
                </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12  ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>All Refunds</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </div>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Order_code</th>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Country</th>
                                    <th>Street_address</th>
                                    <th>Postcode</th>
                                    <th>City</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Credit_card_number</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for refund in refunds %}
                                    <tr>
                                        <td>{{ refund.orderCode }}</td>
                                        <td>{{ refund.name }}</td>
                                        <td>{{ refund.surname }}</td>
                                        <td>{{ refund.country }}</td>
                                        <td>{{ refund.streetAddress }}</td>
                                        <td>{{ refund.postcode }}</td>
                                        <td>{{ refund.city }}</td>
                                        <td>{{ refund.email }}</td>
                                        <td>{{ refund.phone }}</td>
                                        <td>{{ refund.creditCardNumber }}</td>
                                        <td>
                                            <a href="{{ path('refund_show', {'id': refund.id}) }}" class="btn btn-info">Show</a>
                                            <br>
                                            <a href="{{ path('refund_edit', {'id': refund.id}) }}" class="btn btn-info">Edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="12">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('refund_new') }}">Create new</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->


{% endblock %}
